<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editor.AdjustFragment">


    <com.google.android.material.slider.Slider
        android:id="@+id/base_seekBar_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="2.0"
        app:layout_constraintEnd_toEndOf="@+id/base_seekBar_red_title"
        app:layout_constraintStart_toStartOf="@+id/base_seekBar_red_title"
        app:layout_constraintTop_toBottomOf="@+id/base_seekBar_red_title" />

    <TextView
        android:id="@+id/base_seekBar_red_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/base_seekBar_green_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Green"
        app:layout_constraintEnd_toEndOf="@+id/base_seekBar_red"
        app:layout_constraintStart_toStartOf="@+id/base_seekBar_red"
        app:layout_constraintTop_toBottomOf="@+id/base_seekBar_red" />

    <com.google.android.material.slider.Slider
        android:id="@+id/base_seekBar_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="2.0"
        app:layout_constraintEnd_toEndOf="@+id/base_seekBar_green_title"
        app:layout_constraintStart_toStartOf="@+id/base_seekBar_green_title"
        app:layout_constraintTop_toBottomOf="@+id/base_seekBar_green_title" />

    <TextView
        android:id="@+id/base_seekBar_blue_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Blue"
        app:layout_constraintEnd_toEndOf="@+id/base_seekBar_green"
        app:layout_constraintStart_toStartOf="@+id/base_seekBar_green"
        app:layout_constraintTop_toBottomOf="@+id/base_seekBar_green" />

    <com.google.android.material.slider.Slider
        android:id="@+id/base_seekBar_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="2.0"
        app:layout_constraintEnd_toEndOf="@+id/base_seekBar_blue_title"
        app:layout_constraintStart_toStartOf="@+id/base_seekBar_blue_title"
        app:layout_constraintTop_toBottomOf="@+id/base_seekBar_blue_title" />


</androidx.constraintlayout.widget.ConstraintLayout>